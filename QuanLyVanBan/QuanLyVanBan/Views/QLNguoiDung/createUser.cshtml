
@{
    ViewBag.Title = "createUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Nhập mới văn bản</h6>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <form method="post" enctype="multipart/form-data" action="/QLNguoiDung/Create">

                <div class="row">

                    <div class="col-12">
                        <div class="form-group">
                            <label>Tên người dùng</label>
                            <input class="form-control" type="text" value=" " name="TenCaNhan" id="SoVanBan" required />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>SĐT</label>
                            <input class="form-control" type="text" value=" " name="SDT" id="SoVanBan" required />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Nhóm quyền</label>
                            <select class="form-control" name="MaNhomQuyen" id="NgonNgu">
                                <option >--Chọn--</option>
                                <option value="1">Lãnh đạo</option>
                                <option value="2">Văn thư</option>
                                <option value="3">Trợ lý</option>
                                <option value="4">Đại đội</option>
                            </select>
                        </div>

                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" type="email" name="email" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input class="form-control" type="text" name="TenDangNhap" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input class="form-control" type="text" name="MatKhau" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Chức vụ</label>
                            <input class="form-control" type="text" name="MaChucVu" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Cấp bậc</label>
                            <input class="form-control" type="text" name="CapBac" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Đơn vị</label>
                            <input class="form-control" type="text" name="MaDonVi" id="GhiChu" />
                        </div>

                    </div>


                </div>
                <button type="submit" class="btn btn-success btn-sm">Thêm mới</button>
                <a href="@Url.Action("getUser", "QLNguoiDung")"><i class="btn btn-warning btn-sm">Quay lại</i></a>
            </form>
        </div>
    </div>
</div>

