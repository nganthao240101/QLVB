
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using QuanLyVanBan.SampleModels;

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-6">
                <h6 class="m-0 font-weight-bold text-primary">

                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        Danh sách văn bản đến
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/VanBanDen/GetList?thuhoi=1">Văn bản đã duyệt</a></li>
                        <li><a href="/VanBanDen/GetList?thuhoi=2">Văn bản thu hồi</a></li>
                    </ul>
                </h6>
            </div>

            <div class="col-6">
                <h6>
                    <a class="btn btn-danger" style="float:right" href="/VanBanDen/Create">Thêm mới</a>

                </h6>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã văn bản</th>
                        <th>Số văn bản</th>
                        <th>Ngày văn bản</th>
                        <th>Cơ quan phát hành</th>
                        <th>Loại văn bản</th>
                        <th>Trích yếu</th>
                        <th>Số bản</th>
                        <th>Số tờ</th>
                        <th>Độ mật</th>
                        <th>Độ khẩn</th>
                        <th>Tình trạng</th>
                        <th>Actions</th>
                        <th>Xử lý</th>
                    </tr>
                </thead>
                <tfoot>
                </tfoot>
                <tbody>
                    @foreach (var vb in ViewBag.vbden)
                    {
                        <tr>
                             <td>@vb.MaVanBanDen</td>
                            <td>@vb.SoVanBan</td>
                            <td>@vb.NgayVanBan</td>
                            <td>@vb.CoQuanBanHanh</td>
                          @*  <td>@vb.TenLoaiVanBan</td>*@
                            <td>@vb.TrichYeu</td>
                            <td>@vb.SoBan</td>
                            <td>@vb.SoTo</td>
 @*                           <td>@vb.TenDoMat</td>
                            <td>@vb.TenDoKhan</td>
                            @{
                                if (@vb.TinhTrang == false)
                                {
                                    <th>Không cần xử lý</th>
                                }
                                else
                                {
                                    <th style="color:red">Yêu cầu xử lý</th>
                                }

                            }
                            <td>
                                <div class="d-flex">
                                    <a class="btn btn-info btn-sm" href="/VanBanDen/Details/@vb.MaVanBanDen">
                                        <i class="fa fa-info"></i>
                                    </a>
                                    <a class="btn btn-warning btn-sm" href="/VanBanDen/Edit/@vb.MaVanBanDen">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a class="btn btn-danger btn-sm" onclick="xoaVB(@vb.MaVanBanDen)">
                                        <i class="fa fa-trash"></i>
                                    </a>

                                </div>

                            </td>

                            <td>
                                @{ if (vb.TinhTrang == true)
                                    {
                                        <a class="btn btn-info btn-sm" href="/VanBanDen/ListVBCanXuLy">
                                            Chuyển xử lý
                                        </a>
                                    }
                                }
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

