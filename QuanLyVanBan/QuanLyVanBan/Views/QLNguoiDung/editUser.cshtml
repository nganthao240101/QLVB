
@{
    ViewBag.Title = "editUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using QuanLyVanBan.Models;
@model CaNhan
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Nhập mới văn bản</h6>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <form method="post" enctype="multipart/form-data" action="/QLNguoiDung/Create">

                <div class="row">

                    <div class="col-6">
                        <div class="form-group">
                            <label>Tên người dùng</label>
                            <input class="form-control" type="text" value="@Model.TenCaNhan " name="TenCaNhan" required />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>SĐT</label>
                            <input class="form-control" type="text" value="@Model.SDT " name="SDT" id="SoVanBan" required />
                        </div>

                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" type="email" value="@Model.email" name="email" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input class="form-control" type="text" value="@Model.TenDangNhap" name="TenDangNhap" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input class="form-control" type="password" value="@Model.MatKhau" name="MatKhau" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Chức vụ</label>
                            <input class="form-control" type="text" value="@Model.MaChucVu" name="MaChucVu" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Cấp bậc</label>
                            <input class="form-control" type="text" value="@Model.CapBac" name="CapBac" id="GhiChu" />
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Đơn vị</label>
                            <input class="form-control" type="text" value="@Model.MaDonVi" name="MaDonVi" id="GhiChu" />
                        </div>

                    </div>


                </div>
                <button type="submit" class="btn btn-success btn-sm"></button>
                <a href="@Url.Action("getUser", "QLNguoiDung")"><i class="btn btn-warning btn-sm">Quay lại</i></a>
            </form>
        </div>
    </div>
</div>


